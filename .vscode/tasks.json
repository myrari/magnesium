{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "pyro",
			"projectFile": "Debug.ppj",
			"gamePath": "${env:SKYRIM_FOLDER}\\",
			"problemMatcher": [
				"$PapyrusCompiler"
			],
			"label": "Compile Papyrus Scripts (Debug)",
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "pyro",
			"projectFile": "Release.ppj",
			"gamePath": "${env:SKYRIM_FOLDER}\\",
			"problemMatcher": [
				"$PapyrusCompiler"
			],
			"label": "Compile Papyrus Scripts (Release)",
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "Deploy ESP",
			"type": "shell",
			"group": "build",
			"command": "cp '${workspaceFolder}/${workspaceFolderBasename}.esp' '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/'"
		},
		{
			"label": "Deploy Config",
			"type": "shell",
			"group": "build",
			"command": "mkdir -p '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/SKSE/Plugins' && find '${workspaceFolder}/src/Config/' -name '*.yaml' -exec cp {} '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/SKSE/Plugins/' \\;"
		},
		{
			"label": "Deploy (Debug)",
			"type": "shell",
			"dependsOn": [
				"Compile Papyrus Scripts (Debug)",
				"Deploy ESP",
				"Deploy Config"
			],
			"group": "build",
			"command": "mkdir -p '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/Scripts' && find '${workspaceFolder}/contrib/Distribution/PapyrusDebug/' -name '*.pex' -exec cp {} '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/Scripts/' \\;"
		},
		{
			"label": "Deploy (Release)",
			"type": "shell",
			"dependsOn": [
				"Compile Papyrus Scripts (Release)",
				"Deploy ESP",
				"Deploy Config"
			],
			"group": "build",
			"command": "mkdir -p '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/Scripts' && find '${workspaceFolder}/contrib/Distribution/PapyrusDebug/' -name '*.pex' -exec cp {} '${env:SKYRIM_MODS_FOLDER}/${workspaceFolderBasename}/Scripts/' \\;"
		}
	]
}